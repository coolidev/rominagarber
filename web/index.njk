---
layout: layouts/home.njk
tags:
  - nav
navtitle: Home
---

{% set themeColorPrimary = book.content.theme.primary -%}
{% set themeColorSecondary = book.content.theme.secondary -%}
{% set themeColorTertiary = book.content.theme.tertiary -%}

<section class="hero full-bleed">
  <div class="hero-background">
    {# <img src="/images/lobizona-hero.jpg" alt="image of a girl with star eyes standing in front of stars the moon and clouds"/> #}
  </div>
  <div class="hero-card">
    {# here is some placeholder html that you can work into the singleton #}
    <h1>{{ homePage.heroTitle }}</h1>
    <p>{{ homePage.heroDescription }}</p>
    <div class="book-actions">
      <a href="/about/" class="btn btn--hero">Romina&rsquo;s Info</a>
    </div>

    {% include "_includes/components/social.njk" %}

  </div>
</section>
<section class="featured-book full-bleed" style="background-color: {{ themeColorPrimary }};">

  {% for book in booksPage.featured %}

    {%- if book.cover %}
      <figure>
        <img src="{{ book.cover }}" alt="{{ book.content.content.cover.alt }}" />
        {# make this download image a large image #}
        <p><span class="data-label" style="color: {{ themeColorTertiary }}">Download:</span> <a href="{{ book.cover }}?dl=book-cover.jpg" download="{{ book.content.cover.alt }}" rel="noopener">Large cover image
        <svg class="download-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M21 15V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V15" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M7 10L12 15L17 10" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M12 15V3" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        </a></p>
      </figure>
    {% endif -%}

    <div class="featured-book-info">

    <h1 class="mt0 mb0" style="color: {{ themeColorTertiary  }};">{{ book.content.title }}</h1>

    {% if book.hook %}
      {{ book.hook | markdownify | safe }}
    {% endif %}

    <div class="book-actions">

      {# (pre-)order and GR TBR links go here #}
      <a class="btn btn--featured-book" style="border-color: #A69145; color: #A69145;" href="#">Add to Goodreads TBR</a>
      <a class="btn btn--featured-book btn--text-only" href="/books/{{ book.content.slug.current | url }}/">More Info</a>

    </div>

    {% if book.review %}
      {{ book.review | markdownify | safe }}
      {# this review author is not current working on index and books pages I will make sure it is added to the right place in the schema #}
      {% if book.reviewAuthor %}
        <em>&mdash; {{ book.reviewAuthor }}</em>
      {% endif %}
    {% endif %}

    </div>

  {% endfor %}

</section>

<section class="instagram-feed">
  {# statically built Instagram feed goes here #}
</section>

<section class="events">
  {% set eventsList = collections.myEvents %}
  {% set eventsLimit = 1 %} {# limit number of events shown #}
  {% include "eventslist.njk" %}

  <p class="more-link clearfix"><a class="btn btn--secondary" href="{{ '/events/' | url }}">More events
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M19 4H5C3.89543 4 3 4.89543 3 6V20C3 21.1046 3.89543 22 5 22H19C20.1046 22 21 21.1046 21   20V6C21 4.89543 20.1046 4 19 4Z" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M16 2V6" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M8 2V6" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M3 10H21" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg></a>
  </p>
</section>

<section class="blog-posts">
  {% set postsList = collections.myPosts %}
  {% set postsLimit = 2 %} {# limit number of posts shown #}
  {% include "postslist.njk" %}

  <p class="more-link"><a class="btn btn--secondary" href="{{ '/blog/' | url }}">More blog posts
