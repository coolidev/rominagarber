---
layout: layouts/base.njk
templateClass: tmpl-event
---
<section class="event">

  {% if event.content.venue.city %}
    {# create the colored header block #}
    <span style="background-color: {{ event.content.venue.color }}">
      {{- event.content.venue.city -}}
    </span>
  {% endif %}

  <time class="eventlist-date" datetime="{{ currentEvent.content.schedule.from }}">
    {{- event.content.schedule.from | readableDate -}}
  </time>

  <h1>{{ event.content.name }}</h1>
  {{ event.description | markdownify | safe }}

  <p>
    <a href="{{ event.content.link | url }}" target="_blank" rel="noopener">
      Event site
