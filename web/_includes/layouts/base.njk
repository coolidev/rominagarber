<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    {% set css %}
      {% include "style.css" %}
    {% endset %}
    <style>
      {{ css | cssmin | safe }}
    </style>
  </head>
  <body>
    <header class="top-bar">
      <h1 class="logo"><a href="{{ '/' | url }}">[logo]</a></h1>
      <nav class="primary-nav">
        <ul class="primary-nav__list">
          <li class="primary-nav__item"><a href="/about/">About</a></li>
          <li class="primary-nav__item"><a href="/books/">Books</a></li>
          <li class="primary-nav__item"><a href="/events/">Events</a></li>
          <li class="primary-nav__item"><a href="/blog/">Blog</a></li>
        </ul>
      </nav>
    </header>

    <main role="main" class="main">
      {{ content | safe }}
    </main>

    <footer>
      {# Footer goes here #}
    </footer>

  </body>
</html>
